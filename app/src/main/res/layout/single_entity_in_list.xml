<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin">

        <ImageView
            android:id="@+id/poster_image_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="170dp" />

        <ImageView
            android:id="@+id/watchlist_image_view"
            android:src="@drawable/transition"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/release_date_text_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:layout_above="@id/release_date_text_view" />

        <ImageView
            android:id="@+id/rating_image_view"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/rating_star"
            android:layout_alignTop="@+id/release_date_text_view"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/rating_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignTop="@+id/release_date_text_view"
            android:layout_toRightOf="@id/rating_image_view"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>