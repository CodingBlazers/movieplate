<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.megha.movieplate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ContactUsActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".TVFormat.TVShowDetails" />
        <activity android:name=".MovieFormat.SingleMovieActivity" />

        <receiver
            android:name=".MoviePlateReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".CelebsFormat.CelebrityDetailsActivity"></activity>
    </application>

</manifest>
